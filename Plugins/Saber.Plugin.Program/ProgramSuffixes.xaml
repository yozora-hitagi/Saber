<Window x:Class="Saber.Plugin.Program.ProgramSuffixes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
                Width="400"
                Height="180"
        WindowStartupLocation="CenterScreen"
             d:DesignHeight="400" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Margin="10 10 0 0" Foreground="Gray" Text="Saber仅索引下列后缀的文件：" />
        <TextBlock Margin="10 10 0 0" Foreground="Gray" Text="（每个后缀以英文状态下的分号分隔）" />
        <TextBox x:Name="tbSuffixes" Margin="10"/>
        <Button HorizontalAlignment="Right" Height="30" Width="80" Click="ButtonBase_OnClick" Margin="10" Content="更新" />
    </StackPanel>
</Window>







